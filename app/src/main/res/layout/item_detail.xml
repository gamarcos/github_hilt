<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/medium_space"
    android:layout_marginStart="@dimen/medium_space"
    android:layout_marginTop="@dimen/small_space"
    android:id="@+id/item_detail_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_space">

        <TextView
            android:id="@+id/item_detail_pr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:lines="2"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.Dark.Medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nome do repositorio"/>

        <TextView
            android:id="@+id/item_detail_pr_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_space"
            android:lines="2"
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_pr_name"
            app:layout_constraintStart_toStartOf="@+id/item_detail_pr_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nome do repositorio"/>

        <ImageView
            android:id="@+id/item_detail_pr_avatar"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginTop="@dimen/medium_space"
            android:contentDescription="@string/avatar_icon_content_description"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_pr_description"
            app:layout_constraintStart_toStartOf="@+id/item_detail_pr_description"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/item_detail_pr_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_space"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="@+id/item_detail_pr_avatar"
            app:layout_constraintStart_toEndOf="@+id/item_detail_pr_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nome do repositorio"/>

        <TextView
            android:id="@+id/item_detail_pr_complete_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_space"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@+id/item_detail_pr_user_name"
            app:layout_constraintBottom_toBottomOf="@+id/item_detail_pr_avatar"
            app:layout_constraintStart_toEndOf="@+id/item_detail_pr_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/small_space"
            tools:text="Nome do repositorio"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>